{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ES2020",
      "ES2020.Symbol.WellKnown"
    ],
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
